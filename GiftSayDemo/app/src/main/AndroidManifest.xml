<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhao.giftsaydemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".welcome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.MainActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".category.strategy.channels.StrategyChannelsActivity" />
        <activity android:name=".category.strategy.channels.StrategyDetailsActivity"
            android:process=".category.strategy.channels.web"/>
        <activity android:name=".category.gift.channels.GiftChannelsActivity"/>
        <activity android:name=".category.strategy.subject.AllSubjectActivity"/>
        <activity android:name=".category.gift.details.GiftDetailsActivity"
            android:process=".category.gift.details.web"/>
        <activity android:name=".pop.details.PopDetailsActivity"/>
        <activity android:name=".category.strategy.subject.SubjectChannelsActivity"/>
    </application>

</manifest>